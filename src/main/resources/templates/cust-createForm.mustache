{{>layout/home-header}}

<div class="container">
    {{>layout/bodyheader}}

    <form role="form" method="post" action="/custs/new">
        <div class="form-group">
            <label for="name">이름</label>
            <input type="text" class="form-control" placeholder="이름을 입력하세요" id="name" name="name">

            {{#errors}} {{#isErrorName}}
                <div style="color:red">{{nameDefaultMsg}}</div>
            {{/isErrorName}} {{/errors}}
        </div>

            <div class="form-group">
            <label for="phonenumber">전화번호</label>
            <input type="text" class="form-control" placeholder="전화번호를 입력하세요" id="phoneNumber" name="phoneNumber">

            {{#errors}} {{#isErrorPhoneNumber}}
                <div style="color:red">{{phoneNumberDefaultMsg}}</div>
            {{/isErrorPhoneNumber}} {{/errors}}
        </div>

        <div class="form-group">
            <label for="smsConsentType">고객SMS수신유형</label>
            <select class="form-control" id="smsConsentType" name="smsConsentType">
                <option value="">선택</option>
                <option value="ALL_ALLOW">전체 수신</option>
                <option value="ALL_DENY">전체 거부</option>
            </select>

            {{#errors}} {{#isErrorSmsConsentType}}
                <div style="color:red">{{smsConsentTypeDefaultMsg}}</div>
            {{/isErrorSmsConsentType}} {{/errors}}
        </div>
        <button type="submit" class="btn btn-primary" >등록</button>
    </form>
    <br/>

    {{>layout/bodyfooter}}
</div> <!-- /container -->

{{>layout/footer}}