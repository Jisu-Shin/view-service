{{>layout/home-header}}

<div class="container">
    {{>layout/bodyheader}}

    <form role="form" action="/bookings/new" method="post">
        <div class="form-group">
            <label for="cust">예매 회원</label>
            <select name="custId" id="cust" class="form-select">
                <option value="">회원선택</option>
                {{#custs}}
                    <option value={{id}}>{{name}}</option>
                {{/custs}}
            </select>
        </div>
        <div class="form-group">
            <label for="item">공연명</label>
            <select name="itemId" id="item" class="form-select">
            <option value="">공연 선택</option>
            {{#items}}
                <option value={{id}}>{{name}}</option>
            {{/items}}
            </select>
        </div>
        <div class="form-group">
            <label for="count">수량</label>
            <input type="number" class="form-control" id="count" name="count">
        </div>
        <button type="submit" class="btn btn-primary">등록</button>
    </form>
    <br/>

    {{>layout/bodyfooter}}
</div> <!-- /container -->

{{>layout/footer}}